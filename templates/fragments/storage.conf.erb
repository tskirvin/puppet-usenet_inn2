<%# Generic storage.conf entry template, used by usenet_inn2::storage::fragment -%>
# <%= @name %>
method <%= @storage %> {
    class:      <%= @number %>
    newsgroups: <%= @newsgroups %>
<% if @art_size    != '' -%>
    size:       <%= @art_size %>
<% end -%>
<% if @art_expires != '' -%>
    expires:    <%= @art_expires %>
<% end -%>
<% if @options     != '' -%>
    options:    <%= @options %>
<% end -%>
<% if @exactmatch  != '' -%>
    exactmatch: <%= @exactmatch %>
<% end -%>
}

