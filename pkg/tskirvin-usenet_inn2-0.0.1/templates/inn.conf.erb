# /etc/news/inn.conf - base INN configuration for feeders

mta:            "/usr/sbin/sendmail -oi -oem %s"
organization:   <%= organization %>
ovmethod:       <%= ovmethod %>
hismethod:      <%= hismethod %>
pathhost:       <%= host_name %>

# Who we are and what we call ourselves.
#domain:
#innflags:
mailcmd:        /usr/lib/news/bin/innmail
#server:

# Should we slave our article numbers to a parent?  We'll have to figure 
# out another way to handle this.
xrefslave:      false
# Drop incoming articles older than XX days.  This should match expire.ctl.
artcutoff:      <%= article_cutoff %>

# Reject any articles larger than 1MB.
maxartsize:     1048576

# Allocate 4MB to a cache of recently seen history entries.
hiscachesize:   4096

# Allow more incoming feeds than the default.
maxconnections: 200

# Use pgpverify to handle control messages.
pgpverify:      true

# Remember our rejections and just refuse them the next time around.
remembertrash:  true

# Process incoming control messages via controlchan rather than build-in.
usecontrolchan: true

# We want to have an overview database for the readers.
enableoverview: true
overcachesize:  64
storeonxref:    true
wireformat:     true
articlemmap:    true
clienttimeout:  3600
nnrpdcheckart:  true
allownewnews:   true

# Disallow readers?
noreader:       false

# How will we mess with the headers?
addnntppostingdate: false
addnntppostinghost: true
checkincludedtext:  false
complaints:         news@<%= host_name %>
localmaxartsize:    1000000

# Run innwatch.  All of the disk stuff doesn't matter, since we're using
# CNFS exclusively.  But innwatch will watch for the server dying.
doinnwatch:         true
innwatchbatchspace: 800
innwatchlibspace:   25000
innwatchhiload:     5000
innwatchloload:     1000
innwatchpauseload:  3000
innwatchsleeptime:  600
innwatchspoolnodes: 200
innwatchspoolspace: 8000

# Show snapshots of CNFS status in syslog.
docnfsstat:     true
nnrpdoverstats: true

# Keep seven days of logs.
logcycles:      7

# Report both general status and timings every ten minutes.
status:         600
timer:          600

# Various path settings.
patharchive:    <%= path_spool %>/archive
patharticles:   <%= path_spool %>/articles
pathbin:        <%= path_news %>/bin
pathcontrol:    <%= path_news %>/bin/control
pathdb:         <%= path_db %>
pathetc:        <%= path_conf %>
pathfilter:     <%= path_conf %>/filter 
pathhttp:       <%= path_log %>/web
pathincoming:   <%= path_spool %>/incoming 
pathlog:        <%= path_log %>
pathnews:       <%= path_news %>
pathoutgoing:   <%= path_spool %>/outgoing
pathoverview:   <%= path_spool %>/overview
pathrun:        <%= path_run %>
pathspool:      <%= path_spool %>
pathtmp:        <%= path_spool %>/incoming/tmp
